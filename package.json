{
  "name": "react-kotlin-ace-antlr-demo-app",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "ace-builds": "~1.2.9",
    "antlr4": "~4.5.3",
    "antlr4-ace-ext": "git://github.com/maiermic/antlr4-ace-ext.git#v1.0.0",
    "brace": "~0.11.1",
    "react": "^16.3.1",
    "react-ace": "^5.10.0",
    "react-dom": "^16.3.1"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.2",
    "react-scripts-kotlin": "^2.1.9",
    "ts2kt": "^0.1.3"
  },
  "scripts": {
    "start": "react-scripts-kotlin start",
    "build": "react-scripts-kotlin build",
    "eject": "react-scripts-kotlin eject",
    "gen-idea-libs": "react-scripts-kotlin gen-idea-libs",
    "get-types": "react-scripts-kotlin get-types --dest=src/types",
    "postinstall": "npm run gen-idea-libs",
    "prestart": "npm run generate",
    "prebuild": "npm run generate",
    "generate": "npm-run-all -s gen-parser gen-react-ace-binding",
    "gen-parser": "antlr4 -Dlanguage=JavaScript -o src/generated SimpleBoolean.g4",
    "gen-react-ace-binding": "npm-run-all -s convert-react-ace-type rename-react-ace-binding modify-react-ace-binding",
    "convert-react-ace-type": "ts2kt node_modules/react-ace/types.d.ts -d src/generated",
    "rename-react-ace-binding": "mv src/generated/types.kt src/generated/reactAce.kt",
    "modify-react-ace-binding": "perl -p -i -e 's/(interface AceEditorProps)/$1 : react.RProps/' src/generated/reactAce.kt"
  }
}
